#include <studio.h>
int main(int argc, char *argv[])
{
int a, b, somma, prod;
do{
printf("Inserisci valore di a (mettendo 0 si esce dal programma)");
scanf("%d", &a);  //%d serve a convertire il valore per stampare un valore intero
printf("Inserisci valore di b (mettendo 0 si esce dal programma)");
scanf("%d", &b);
prod=a*b;
printf("Il prodotto è %d\n", prod);
somma=somma+prod;
}while(a!=0&&b!=0);
printf("La somma dei prodotti è %d\n", somma);
return 0;
}
